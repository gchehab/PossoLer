{
    "manifest_version": 2,
    "version": "1.0.4",
    "name": "Posso Ler?",
    "description": "Tenha acesso a notícias ilimitadas no site Folha, Estadão, e Gazeta do Povo de forma gratuita e segura",
    "author": "Thomaz Ferreira Neves dos Santos",

    "icons": {
        "48": "icons/48.png",
        "128": "icons/128.png"
     },

    "page_action": {
        "default_icon": {
            "19" : "icons/19.png"
        },
        "default_title": "Posso Ler?"
    },

    "content_scripts": [{
        "js":["js/script.js"],
        "matches":["https://*.folha.uol.com.br/*", "https://*.estadao.com.br/*",  "https://*.gazetadopovo.com.br/*"]
    }]
}
